<%= form_for(@page) do |f| %>
  
  <div class="field">
    <%= f.text_field :title, :placeholder => "Title" %>
    <label class="checkbox">
      Public
      <%= f.check_box :public %>
    </label>
  </div>
  <div class="field">
  <div class="row">
    <div class="span6">
      <%= f.text_area :content, :placeholder => "Markdown content", :style => "width:100%;" %>
  </div>
  <div class="span6">
    <div id="md-preview" class="well">
    </div>
  </div>
  </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
